-
  const sponsors = [
    { name: '奧義智慧科技', img: 'cycarrier' },
    { name: '財團法人可成教育基金會', img: 'catcher' }
  ]

section#credit.hero.is-medium.is-white.is-bold
  .hero-body
    h2.title.has-text-centered 協辦單位
    .container.is-flex.justify-center.has-text-centered
      each org in coorganizers
        figure.image(data-aos="fade-up")
          img.org(
            src=`static/images/coorganizers/${org.img}.png`
            alt=org.name
          )
          figcaption= org.name

  hr.divider

  .hero-body
    h2.title.has-text-centered 贊助單位
    .container.is-flex.justify-center.has-text-centered
      each org in sponsors
        figure.image(data-aos="fade-up")
          img.org(
            src=`static/images/sponsors/${org.img}.png`
            alt=org.name
          )
          figcaption= org.name

