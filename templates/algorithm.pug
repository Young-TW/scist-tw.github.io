.columns
  .column.p-4(style="background-color: #48c774;")
    h4.title.is-4.has-text-white.has-text-right 初階班
    each semester in courses.algorithm.beginner
      .box
        h5.subtitle.is-5.has-text-black.has-text-centered #{semester.name}
        each topic in semester.topics
          h6.subtitle.is-6.has-text-black.has-text-centered #{topic.name}
          ul
            each subtopic in topic.subtopics
              li= subtopic
  .column.p-4(style="background-color: #15838d; border-top: 5px dashed #7e9dbf; border-bottom: 5px dashed #7e9dbf; border-left: 5px dashed #3298dc; border-right: 5px dashed #48c774;")
    h4.title.is-4.has-text-centered(style="color: #15838d;") 重複段
    each semester in courses.algorithm.middle
      .box
        h5.subtitle.is-5.has-text-black.has-text-centered #{semester.name}
        each topic in semester.topics
          h6.subtitle.is-6.has-text-black.has-text-centered #{topic.name}
          ul
            each subtopic in topic.subtopics
              li= subtopic
  .column.p-4(style="background-color: #3298dc;")
    h4.title.is-4.has-text-white.has-text-left 進階班
    each semester in courses.algorithm.advanced
      .box
        h5.subtitle.is-5.has-text-black.has-text-centered #{semester.name}
        each topic in semester.topics
          h6.subtitle.is-6.has-text-black.has-text-centered #{topic.name}
          ul
            each subtopic in topic.subtopics
              li= subtopic

