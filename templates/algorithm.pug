.columns
  .column
    h4.title.is-4.has-text-centered 初階班
    each semester, index in courses.algorithm.beginner
      h5.subtitle.is-5 #{semester.name}
      ul
        each category in semester.categories
          li= category.name
            ul
              each topic in category.topics
                li= topic
  .column
    h4.title.is-4.has-text-centered 進階班
    each semester, index in courses.algorithm.advanced  
      h5.subtitle.is-5 #{semester.name}
        ul
          each category in semester.categories
            li= category.name
              ul
                each topic in category.topics
                  li= topic

