.columns
  .column.p-4(style="background-color: #48c774; position: relative;")
      h4.title.is-4.has-text-white.has-text-centered.column-title 初階班
      each semester in courses.algorithm.beginner
        .box
          h5.subtitle.is-5.has-text-black.has-text-centered.semester-title #{semester.name}
          each topic in semester.topics
            h6.subtitle.is-6.has-text-black.has-text-centered #{topic.name}
            ul
              each subtopic in topic.subtopics
                li.has-text-black= subtopic
